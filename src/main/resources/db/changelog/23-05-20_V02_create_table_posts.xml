<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <preConditions>
        <runningAs username="natalia"/>
    </preConditions>

    <changeSet id="2" author="natalia">

        <!--        <sql>CREATE TYPE status_moderation_for_post AS ENUM ('NEW','ACCEPTED', 'DECLINED')</sql>-->

        <createTable tableName="posts">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValueBoolean="false"/>
            <column name="moderation_status" type="status_moderation_for_post" defaultValue="NEW">
                <constraints nullable="false"/>
            </column>
            <column name="moderator_id" type="bigint"/>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="view_count" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>